.bottom-bar {
  position: fixed;
  display: flex;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  font-size: 30rpx;
  box-shadow: 0 -1px 1px rgba(100, 100, 100, .2);
  background-color: #fff;

}

.bar-item {
  flex: 1;
  display: flex;
}

.left-item,
.right-item {
  flex: 1;
  text-align: center;
}

.left-item {
  font-size: 28rpx;
}

.left-item image {
  margin-top: 20rpx;
}

.left-item image {
  width: 44rpx;
  height: 44rpx;
}

.right-item {
  line-height: 120rpx;
}

.cart {
  background: #ffe817;
}

.buy {
  background: #ff5777;
  color: #fff;
}